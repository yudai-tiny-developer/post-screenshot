{
    "manifest_version": 3,
    "name": "Quick Post ScreenShot",
    "version": "1.3.0",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "matches": [
                "https://x.com/intent/post?screenshot=1&*"
            ]
        }
    ],
    "action": {
        "default_title": "Quick Post ScreenShot"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "commands": {
        "post-screenshot": {
            "description": "Quick Post ScreenShot"
        }
    }
}