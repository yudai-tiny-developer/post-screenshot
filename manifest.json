{
    "manifest_version": 3,
    "name": "Quick Post ScreenShot",
    "version": "1.4.3",
    "description": "__MSG_appDesc__",
    "default_locale": "en",
    "icons": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
    },
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "content.js"
            ],
            "run_at": "document_end",
            "matches": [
                "https://x.com/intent/post?screenshot=1&*"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "common.js",
                "inject.js"
            ],
            "matches": [
                "*://*/*"
            ]
        }
    ],
    "action": {
        "default_title": "Quick Post ScreenShot"
    },
    "options_ui": {
        "page": "popup.html",
        "open_in_tab": false
    },
    "permissions": [
        "storage",
        "tabs",
        "activeTab",
        "scripting"
    ],
    "commands": {
        "post-screenshot": {
            "description": "Quick Post ScreenShot"
        }
    }
}